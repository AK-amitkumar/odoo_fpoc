<openerp>
    <data>

        <!-- FORMVIEW -->
        <record id="fiscal_printer.view_fiscal_printer_fiscal_printer_form" model="ir.ui.view">
            <field name="name">fiscal_printer.fiscal_printer.form</field>
            <field name="model">fiscal_printer.fiscal_printer</field>
            <field name="arch" type="xml">
                <form string="fiscal_printer" version="7.0">
                    <header>
                    </header>
                    <sheet string="fiscal_printer">
                     <group>
                        <field name="name" />
                        <field name="protocol" />
                        <field name="model" />
                        <field name="serialNumber" />
                        <field name="lastUpdate" widget="fp_update" />
                     </group>
                        <notebook>
                            <page string="Status">
                                <group>
                                <field name="clock" />
                                <field name="printerStatus" />
                                </group>
                            </page>
                            <page string="Attributes">
                                <field name="attribute_ids">
                                    <tree editable="bottom">
                                        <field name="name" readonly="1"/>
                                        <field name="value" widget="fp_attribute"/>
                                        <field name="lastUpdate" readonly="1" invisible="1"/>
                                        <field name="lastCommit" readonly="1" invisible="1"/>
                                        <field name="readOnly"   readonly="1" invisible="1"/>
                                        <field name="fiscal_printer_id"  readonly="1" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Actions">
                                <button name="test_printers" type="object" string="Test printer"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</openerp>
