<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

<t t-name="FiscalPrinterQuery">
	<html>
		<body>
			<div class="oe_view_manager oe_view_manager_current">
				<table class="oe_view_manager_header">
					<colgruop>
						<col width="20%"/>
						<col width="35%"/>
						<col width="15%"/>
						<col width="30%"/>
					</colgruop>
					<tbody>
						<tr class="oe_header_row oe_header_row_top">
							<td colspan="2"><h2>Local Fiscal Printers</h2></td>
							<td colspan="2"></td>
						</tr>
						<tr class="oe_header_row">
							<td>
								<div class="oe_view_manager_buttons">
									<div class="oe_list_buttons">
										<button type="button" class="oe_button oe_list_publish oe_highlight">Publish</button>
										<button type="button" class="oe_button oe_list_update">Update List</button>
									</div>
								</div>
							</td>
							<td colspan="2"></td>
							<td></td>
						</tr>
					</tbody>
				</table>
				<div class="oe_view_manager_body" style="display:none;">
					<div class="oe_view_manager_messages">
						<div class="oe_fiscal_printer_message_no_app">
							<h3>No Fiscal Printer application is running in this browser.</h3>
						</div>
						<div class="oe_fiscal_printer_message_no_printers">
							<h3>No Fiscal Printer availables.</h3>
						</div>
					</div>
					<div class="oe_view_manager_view_list">
						<div class="oe_list oe_field_fiscal_printer_table">
							<table class="oe_list_content">
								<thead>
									<tr class="oe_list_header_columns">
										<th width="1"><input type='checkbox' class="oe_list_record_selector"/></th>
										<th data-id="protocol" class="oe_list_header_char oe_sortable">Protocol</th>
										<th data-id="model" class="oe_list_header_char oe_sortable">Model</th>
										<th data-id="serialNumber" class="oe_list_header_char oe_sortable">Serial Number</th>
										<th data-id="pos" class="oe_list_header_char oe_sortable">Point of Sale</th>
									</tr>
								</thead>
								<tfoot>
									<tr>
										<td></td>
										<td class="oe_list_footer oe_number"></td>
										<td class="oe_list_footer oe_number"></td>
										<td class="oe_list_footer oe_number"></td>
										<td class="oe_list_footer oe_number"></td>
									</tr>
								</tfoot>
								<tbody>
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</body>
	</html>
</t>

<t t-name="FieldFiscalPrinterUpdate">
	<div>
		<div class="oe_fp_update">
			<button type="button">Update</button>
		</div>
		<div class="oe_fp_check_printer">
			Printer is not available.
			<button type="button">Check</button>
		</div>
		<div class="oe_fp_check_app">
			Fiscal Printer Application is not available. Install it and refresh the page.
		</div>
	</div>
</t>

<t t-name="FieldFiscalPrinterSetup">
	<div>
		<div class="oe_fp_setup">
			The value of the entry
		</div>
		<div class="oe_fp_check_printer">
			Printer is not available.
			<button type="button">Check</button>
		</div>
		<div class="oe_fp_check_app">
			Fiscal Printer Application is not available. Install it and refresh the page.
		</div>
	</div>
</t>

<t t-name="FieldFiscalPrinterAttribute">
	<span t-att-class="'oe_form_field '+widget.widget_class" t-att-style="'background: lightsteelblue;' + widget.node.attrs.style">
		<t t-if="!widget.get('effective_readonly')">
			<input t-att-type="widget.password ? 'password' : 'text'"
                            t-att-id="widget.id_for_label"
                            t-att-tabindex="widget.node.attrs.tabindex"
                            t-att-autofocus="widget.node.attrs.autofocus"
                            t-att-placeholder="widget.node.attrs.placeholder"
                            t-att-maxlength="widget.field.size"
                        />
			<img t-att-src='_s + "/web/static/src/img/icons/STOCK_PRINT.png"'   width="16" height="16" border="0" id="fp_read"/>
			<img t-att-src='_s + "/web/static/src/img/icons/STOCK_SAVE.png"'    width="16" height="16" border="0" id="fp_write"/>
			<img t-att-src='_s + "/web/static/src/img/icons/STOCK_CONNECT.png"'    width="16" height="16" border="0" id="fp_connect"/>
		</t>
		<t t-if="widget.get('effective_readonly')">
	            <span class="oe_form_char_content"></span>
		    <img t-attr-src='s_ + "/web/static/src/img/icons/STOCK_PRINT.png"' width="16" height="16" border="0" id="fp_read"/>
		    <img t-attr-src='s_ + "/web/static/src/img/icons/STOCK_CONNECT.png"' width="16" height="16" border="0" id="fp_connect"/>
	        </t>
	</span>
</t>

<t t-name="FieldFiscalPrinterControl">
	<span t-att-class="'oe_form_field '+widget.widget_class" t-att-style="'background: lightsteelblue;' + widget.node.attrs.style">
		Esto es el estado de la impresora fiscal. Cuando quieran imprimir aparecerá aquí el estado.
	</span>
</t>


</templates>
