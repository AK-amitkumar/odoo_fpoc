<openerp>
    <data>
        <!-- TREEVIEW -->
        <record id="view_disconnected_tree" model="ir.ui.view">
            <field name="name">fiscal_printer.disconnected.tree</field>
            <field name="model">fiscal_printer.disconnected</field>
            <field name="arch" type="xml">
                <tree string="Disconnected Fiscal Printer" create="false" edit="false">
                    <field name="name"/>
                    <field name="protocol"/>
                    <field name="model"/>
                    <field name="user_id"/>
                    <field name="session_id"/>
                    <button type="object" name="create_fiscal_printer" string="Create"
                        icon="STOCK_NEW"/>
                </tree>
            </field>
        </record>

        <!-- SEARCH VIEW -->
        <record id="view_fiscal_printer_fiscal_printer_filter" model="ir.ui.view">
            <field name="name">fiscal_printer.fiscal_printer.select</field>
            <field name="model">fiscal_printer.fiscal_printer</field>
            <field name="arch" type="xml">
                <search string="Fiscal Printer" version="7.0">
                    <group string="By Attribute">
                    <field name="name" string="Name"
                            />
                    </group>
                    <group string="By object">
                    </group>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="fiscal_printer.view_fiscal_printer_fiscal_printer_form" model="ir.ui.view">
            <field name="name">fiscal_printer.fiscal_printer.form</field>
            <field name="model">fiscal_printer.fiscal_printer</field>
            <field name="arch" type="xml">
                <form string="fiscal_printer" version="7.0">
                    <header>
                    </header>
                    <sheet string="fiscal_printer">
                     <group>
                        <field name="name" />
                        <field name="protocol" />
                        <field name="model" />
                        <field name="serialNumber" />
                        <field name="lastUpdate"/>
                        <field name="session_id"/>
                     </group>
                        <notebook>
                            <page string="Status">
                                <group>
                                <field name="clock" widget="datetime"/>
                                <field name="printerStatus" />
                                <field name="fiscalStatus" />
                                </group>
                            </page>
                            <page string="Attributes">
                                <button name="read_attributes"  type="object" string="Read"/>
                                <button name="write_attributes" type="object" string="Write"/>
                                <field name="attribute_ids">
                                    <tree editable="bottom">
                                        <field name="name" readonly="1"/>
                                        <field name="value"/>
                                        <field name="lastUpdate" readonly="1" invisible="1"/>
                                        <field name="lastCommit" readonly="1" invisible="1"/>
                                        <field name="readOnly"   readonly="1" invisible="1"/>
                                        <field name="fiscal_printer_id"  readonly="1" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Actions">
                                <button name="short_test"           type="object" string="Short Test"/>
                                <button name="large_test"           type="object" string="Large Test"/>
                                <button name="advance_paper"        type="object" string="Advance paper"/>
                                <button name="cut_paper"            type="object" string="Cut paper"/>
                                <button name="open_fiscal_journal"  type="object" string="Open Fiscal Journal"/>
                                <button name="close_fiscal_journal" type="object" string="Close Fiscal Journal"/>
                                <button name="shift_change"         type="object" string="Shift Change"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- TREEVIEW -->
        <record id="view_fiscal_printer_fiscal_printer_tree" model="ir.ui.view">
            <field name="name">fiscal_printer.fiscal_printer.tree</field>
            <field name="model">fiscal_printer.fiscal_printer</field>
            <field name="arch" type="xml">
                <tree string="Fiscal Printer"
                    >
                    <field name="name"
                        />
                    <field name="protocol"
                        />
                    <field name="model"
                        />
                    <field name="serialNumber"
                        />
                    <field name="lastUpdate"
                        />
                </tree>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="fiscal_printer.view_fiscal_printer_configuration_form" model="ir.ui.view">
            <field name="name">fiscal_printer.configuration.form</field>
            <field name="model">fiscal_printer.configuration</field>
            <field name="arch" type="xml">
                <form string="Fiscal Printer Configuration" version="7.0">
                     <group>
                        <field name="name" />
                        <field name="configuration_line_ids">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="value"/>
                            </tree>
                        </field>
                     </group>
                </form>
            </field>
        </record>


    </data>
</openerp>
